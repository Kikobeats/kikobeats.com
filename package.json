{
  "name": "kikobeats.com",
  "description": "ma website yo",
  "version": "1.5.17",
  "author": {
    "email": "josefrancisco.verdu@gmail.com",
    "name": "Kiko Beats",
    "url": "https://kikobeats.com"
  },
  "contributors": [
    {
      "name": "Anand Dyavanapalli",
      "email": "adyavanapalli@gmail.com"
    }
  ],
  "devDependencies": {
    "@commitlint/cli": "latest",
    "@commitlint/config-conventional": "latest",
    "acho": "latest",
    "browser-sync": "latest",
    "condense-whitespace": "latest",
    "conventional-github-releaser": "latest",
    "finepack": "latest",
    "git-authors-cli": "latest",
    "gulp": "latest",
    "imageoptim-cli": "latest",
    "lint-staged": "latest",
    "npm-check-updates": "latest",
    "prettier-standard": "latest",
    "simple-git-hooks": "latest",
    "standard": "latest",
    "standard-markdown": "latest",
    "standard-version": "latest",
    "svgo": "latest",
    "tachyons-sass": "latest"
  },
  "engines": {
    "node": ">= 14"
  },
  "scripts": {
    "build": "NODE_ENV=production JEKYLL_ENV=production bundle exec jekyll build",
    "dev": "gulp",
    "lint": "standard-markdown && standard",
    "postrelease": "npm run release:tags && npm run release:github",
    "precommit": "lint-staged",
    "prerelease": "npm run update:check",
    "pretest": "npm run lint",
    "release": "git-authors-cli && git add package.json && standard-version -a",
    "release:github": "conventional-github-releaser -p angular",
    "release:tags": "git push --follow-tags origin HEAD:master",
    "test": "exit 0",
    "update": "ncu -u",
    "update:check": "ncu -- --error-level 2"
  },
  "private": true,
  "license": "MIT",
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "package.json": [
      "finepack"
    ],
    "*.js": [
      "prettier-standard"
    ],
    "*.md": [
      "standard-markdown"
    ],
    "*.{png,jpeg,jpg,gif}": [
      "imageoptim --imagealpha"
    ],
    "*.svg": [
      "svgo --pretty"
    ]
  },
  "simple-git-hooks": {
    "hooks": {
      "commit-msg": "npx commitlint --edit",
      "pre-commit": "npx lint-staged"
    }
  },
  "standard": {
    "ignore": [
      "js/prism.js"
    ]
  },
  "urlint": {
    "url": [
      "https://kikobeats.com",
      "https://kikobeats.com/blog",
      "https://kikobeats.com/sitemap.xml"
    ],
    "whitelist": [
      "https://*research.ibm.com*",
      "https://windtoday.co*",
      "https://www.linkedin.com/in/kikobeats"
    ]
  }
}
